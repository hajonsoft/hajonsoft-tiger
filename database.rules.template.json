{
  "rules": {
    "customer": {
      "online": {
        ".read" : true,
          ".write": true
      }
    },
    ".read": "auth != null && (auth.uid == 'UUID1' || auth.uid == 'UUID2')",
    ".write": "auth != null && (auth.uid == 'UUID1' || auth.uid == 'UUID2')",
    "$uid": {
      ".read": "auth != null && auth.uid == $uid",
      ".write": "auth != null && auth.uid == $uid"
    },
    "protected": {
      ".read": true
    },
    "public": {
      ".read": true,
      ".write": true
    }
  }
}
